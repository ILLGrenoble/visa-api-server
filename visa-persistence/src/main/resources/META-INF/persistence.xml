<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <persistence-unit name="visa" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <mapping-file>mappers/orm.xml</mapping-file>
        <mapping-file>mappers/application-credential-orm.xml</mapping-file>
        <mapping-file>mappers/configuration-orm.xml</mapping-file>
        <mapping-file>mappers/experiment-orm.xml</mapping-file>
        <mapping-file>mappers/flavour-orm.xml</mapping-file>
        <mapping-file>mappers/flavour-limit-orm.xml</mapping-file>
        <mapping-file>mappers/image-orm.xml</mapping-file>
        <mapping-file>mappers/plan-orm.xml</mapping-file>
        <mapping-file>mappers/instrument-orm.xml</mapping-file>
        <mapping-file>mappers/proposal-orm.xml</mapping-file>
        <mapping-file>mappers/instance-orm.xml</mapping-file>
        <mapping-file>mappers/user-orm.xml</mapping-file>
        <mapping-file>mappers/employer-orm.xml</mapping-file>
        <mapping-file>mappers/role-orm.xml</mapping-file>
        <mapping-file>mappers/image-protocol-orm.xml</mapping-file>
        <mapping-file>mappers/instance-attribute-orm.xml</mapping-file>
        <mapping-file>mappers/cloud-provider-configuration-orm.xml</mapping-file>
        <mapping-file>mappers/cloud-provider-configuration-parameter-orm.xml</mapping-file>
        <mapping-file>mappers/user-role-orm.xml</mapping-file>
        <mapping-file>mappers/instance-member-orm.xml</mapping-file>
        <mapping-file>mappers/instance-authentication-token-orm.xml</mapping-file>
        <mapping-file>mappers/instance-command-orm.xml</mapping-file>
        <mapping-file>mappers/instance-session-orm.xml</mapping-file>
        <mapping-file>mappers/instance-session-member-orm.xml</mapping-file>
        <mapping-file>mappers/instance-jupyter-session-orm.xml</mapping-file>
        <mapping-file>mappers/instance-expiration-orm.xml</mapping-file>
        <mapping-file>mappers/instance-thumbnail-orm.xml</mapping-file>
        <mapping-file>mappers/instrument-scientist-orm.xml</mapping-file>
        <mapping-file>mappers/instance-extension-request-orm.xml</mapping-file>
        <mapping-file>mappers/instance-activity-orm.xml</mapping-file>
        <mapping-file>mappers/security-group-orm.xml</mapping-file>
        <mapping-file>mappers/security-group-filter-orm.xml</mapping-file>
        <mapping-file>mappers/system-notification-orm.xml</mapping-file>

        <class>eu.ill.visa.core.entity.ApplicationCredential</class>
        <class>eu.ill.visa.core.entity.Configuration</class>
        <class>eu.ill.visa.core.entity.Experiment</class>
        <class>eu.ill.visa.core.entity.Flavour</class>
        <class>eu.ill.visa.core.entity.FlavourLimit</class>
        <class>eu.ill.visa.core.entity.Image</class>
        <class>eu.ill.visa.core.entity.Plan</class>
        <class>eu.ill.visa.core.entity.ImageProtocol</class>
        <class>eu.ill.visa.core.entity.Instrument</class>
        <class>eu.ill.visa.core.entity.Proposal</class>
        <class>eu.ill.visa.core.entity.Instance</class>
        <class>eu.ill.visa.core.entity.InstanceAuthenticationToken</class>
        <class>eu.ill.visa.core.entity.InstanceCommand</class>
        <class>eu.ill.visa.core.entity.InstanceAttribute</class>
        <class>eu.ill.visa.core.entity.InstanceMember</class>
        <class>eu.ill.visa.core.entity.InstanceSession</class>
        <class>eu.ill.visa.core.entity.InstanceSessionMember</class>
        <class>eu.ill.visa.core.entity.InstanceJupyterSession</class>
        <class>eu.ill.visa.core.entity.InstanceExpiration</class>
        <class>eu.ill.visa.core.entity.InstanceThumbnail</class>
        <class>eu.ill.visa.core.entity.InstanceActivity</class>
        <class>eu.ill.visa.core.entity.User</class>
        <class>eu.ill.visa.core.entity.Employer</class>
        <class>eu.ill.visa.core.entity.SecurityGroup</class>
        <class>eu.ill.visa.core.entity.SecurityGroupFilter</class>
        <class>eu.ill.visa.core.entity.SystemNotification</class>
        <class>eu.ill.visa.core.entity.InstrumentScientist</class>
        <class>eu.ill.visa.core.entity.CloudProviderConfiguration</class>
        <class>eu.ill.visa.core.entity.CloudProviderConfiguration$CloudProviderConfigurationParameter</class>

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
        </properties>

    </persistence-unit>

</persistence>


